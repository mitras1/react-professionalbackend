    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Development Build",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\server.js",
            "envFile": "${workspaceFolder}/enviroments/development.env"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Staging Build",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\server.js",
            "envFile": "${workspaceFolder}/enviroments/staging.env"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Production Build",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\server.js",
            "envFile": "${workspaceFolder}/enviroments/production.env"
        }
    ]
}